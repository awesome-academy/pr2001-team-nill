<div class="container-fluid">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "root1.jpg",  class: 'd-block w-100' %>
      </div>
    </div>
  </div>
<div class="container-fluid">
<h1 style="text-align:center; ">Dish</h1>
  <div class="row">
    <% @dishes.each do |dish|%>
      <div class="col-md-3">
        <div class="dish <%= dish.id %>">
            <%= image_tag(dish.images.sample&.link_url.to_s, class:"img-fix") %>  
            <h4 style="text-align: center;"><%= link_to "#{dish.name}", dish_path(dish) %> </h4>
        </div>
      </div>  
    <% end %>            
  </div>
</div>

</body>
</html>
