<div class="form-group">
	<%= form_for [current_user, @comments] do |f| %>
	  <%= f.hidden_field :user_id, value: current_user.id %> 
	  <%= f.hidden_field :dish_id, value: @dish.id %>
	  <h1><label for="exampleFormControlTextarea1">Comment</label></h1>
	  <%= f.text_area :contents, class:"form-control"%>
	  <%= f.submit "Submit" , class:" form-control btn btn-primary"%>
	<% end %>
</div>